<%- include ('../partials/header') -%>
<%- include ('../partials/navbarblog') -%>
    <div class="container">
            <% result.articles.rows.forEach( article => { %>
                <div class="card mt-2">
                 <div class="card-header">
                     <h2><%=article.title%></h2>
                     <h6><%=article.updatedAt%></h6>  
                 </div>
                 <div class="card-body">
                     <a href="/article/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                 </div>
                </div>
             <% }) %>
             <nav aria-label="Page navigation example" class="my-5">
                <ul class="pagination justify-content-center">

                  <% if(result.page <= 2) { %>
                    <li class="page-item">
                      <li class="page-item">
                        <a class="page-link" href="/" tabindex="-1" aria-disabled="true">Previous</a>
                      </li>
                    </li>
                  <% } else{ %>
                    <li class="page-item">
                      <a class="page-link" href="/page/<%=result.page -1 %>" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                  <% } %>
                  <% if(result.next) { %>
                    <li class="page-item">
                      <a class="page-link" href="/page/<%=result.page +1 %>">Next</a>
                    </li>
                    <% } %>
                  
                </ul>
              </nav>
    </div> 
<%- include ('../partials/footer') -%>
