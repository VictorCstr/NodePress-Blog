<%- include ('partials/header') -%>
<%- include ('partials/navbarblog') -%>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Olá, Seja bem vindo!</h1>
            <p class="lead">Este é um blog para você que tem dúvidas sobre o vasto mundo da programação</p>
          </div>
        <% article.forEach( article => { %>
           <div class="card">
            <div class="card-header">
                <h2><%=article.title%></h2>
                <h6><%=article.updatedAt%></h6>  
            </div>
            <div class="card-body">
                <a href="/article/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
           </div>
        <% }) %>
        <nav aria-label="Page navigation example" class="my-5">
            <ul class="pagination justify-content-center">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="/page/2">Next</a>
              </li>
            </ul>
          </nav>
    </div> 
<%- include ('partials/footer') -%>
